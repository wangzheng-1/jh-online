<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.xcompany.jhonline.widget.MenuButton
        android:id="@+id/advance_yes"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:menu_button_color_normal="@color/color333333"
        app:menu_button_color_press="@color/color0072FF"
        app:menu_button_image_normal="@drawable/unchecked"
        app:menu_button_image_press="@drawable/checked"
        app:menu_button_resource="@layout/view_menu_button3"
        app:menu_button_title="垫资" />

    <com.xcompany.jhonline.widget.MenuButton
        android:id="@+id/advance_no"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:menu_button_color_normal="@color/color333333"
        app:menu_button_color_press="@color/color0072FF"
        app:menu_button_image_normal="@drawable/unchecked"
        app:menu_button_image_press="@drawable/checked"
        app:menu_button_resource="@layout/view_menu_button3"
        app:menu_button_title="不垫资" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />
</LinearLayout>