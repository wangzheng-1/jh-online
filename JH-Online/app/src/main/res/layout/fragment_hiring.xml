<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorf8fbff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.xcompany.jhonline.widget.MenuButton
            android:id="@+id/menu1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            app:menu_button_color_normal="@color/color333333"
            app:menu_button_color_press="@color/color0072FF"
            app:menu_button_image_normal="@drawable/down"
            app:menu_button_image_press="@drawable/up"
            app:menu_button_resource="@layout/view_menu_button"
            app:menu_button_title="劳务工种" />

        <com.xcompany.jhonline.widget.MenuButton
            android:id="@+id/menu2"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            app:menu_button_color_normal="@color/color333333"
            app:menu_button_color_press="@color/color0072FF"
            app:menu_button_image_normal="@drawable/down"
            app:menu_button_image_press="@drawable/up"
            app:menu_button_resource="@layout/view_menu_button"
            app:menu_button_title="所在地区" />


    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />
</LinearLayout>