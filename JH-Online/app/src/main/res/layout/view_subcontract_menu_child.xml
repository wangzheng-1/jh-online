<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xcompany.jhonline.widget.MenuButton
        android:id="@+id/menu_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:menu_button_color_normal="@color/color333333"
        app:menu_button_color_press="@color/color0072FF"
        app:menu_button_image_normal="@drawable/arrow1"
        app:menu_button_image_press="@drawable/arrow2"
        app:menu_button_resource="@layout/view_menu_button2"
        app:menu_button_title="特项工程类" />

    <com.xcompany.jhonline.widget.JHGridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone" />

</LinearLayout>